---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  features: string[];
  icon?: string;
  gradient: string;
  imagePosition?: 'left' | 'right';
  tag?: string;
  imageSrc?: string;
  imageAlt?: string;
}

const {
  title,
  subtitle,
  description,
  features,
  icon,
  gradient,
  imagePosition = 'right',
  tag,
  imageSrc,
  imageAlt = ''
} = Astro.props;

const hasSlot = Astro.slots.has('mockup');
---

<div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center ${imagePosition === 'left' ? 'lg:flex-row-reverse' : ''}`}>
  <!-- Content -->
  <div class={`${imagePosition === 'left' ? 'lg:order-2 animate-slide-right' : 'animate-slide-left'}`}>
    {tag && (
      <span class="inline-block text-primary-400 text-sm font-semibold uppercase tracking-wider mb-4">
        {tag}
      </span>
    )}
    <h3 class="text-3xl md:text-4xl font-bold mb-4">{title}</h3>
    <p class="text-xl text-gray-400 mb-6">{subtitle}</p>
    <p class="text-gray-400 mb-8 leading-relaxed">{description}</p>

    <!-- Feature list -->
    <ul class="space-y-4">
      {features.map((feature) => (
        <li class="flex items-start gap-3">
          <div class="flex-shrink-0 w-6 h-6 rounded-full bg-primary-600/20 flex items-center justify-center mt-0.5">
            <svg class="w-4 h-4 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <span class="text-gray-300">{feature}</span>
        </li>
      ))}
    </ul>
  </div>

  <!-- Visual -->
  <div class={`${imagePosition === 'left' ? 'lg:order-1 animate-slide-left' : 'animate-slide-right'}`}>
    {imageSrc ? (
      <!-- Real screenshot image -->
      <div class="relative rounded-2xl overflow-hidden shadow-2xl border border-dark-border">
        <img src={imageSrc} alt={imageAlt} class="w-full h-auto" loading="lazy" />
      </div>
    ) : hasSlot ? (
      <!-- Custom mockup slot -->
      <div class="relative rounded-2xl overflow-hidden shadow-2xl border border-dark-border bg-dark-surface">
        <slot name="mockup" />
      </div>
    ) : (
      <!-- Fallback: gradient with icon -->
      <div class={`relative rounded-2xl bg-gradient-to-br ${gradient} p-8 aspect-[4/3] flex items-center justify-center`}>
        <div class="absolute inset-0 rounded-2xl bg-dark-bg/40 backdrop-blur-sm"></div>
        <div class="absolute top-4 left-4 w-3 h-3 rounded-full bg-white/20"></div>
        <div class="absolute top-4 left-10 w-3 h-3 rounded-full bg-white/20"></div>
        <div class="absolute top-4 left-16 w-3 h-3 rounded-full bg-white/20"></div>

        <div class="relative z-10 w-24 h-24 rounded-2xl bg-white/10 backdrop-blur flex items-center justify-center">
          <Fragment set:html={icon} />
        </div>

        <div class="absolute bottom-8 right-8 w-32 h-20 rounded-lg bg-white/10 backdrop-blur-sm border border-white/10"></div>
        <div class="absolute top-1/2 right-12 w-24 h-16 rounded-lg bg-white/5 backdrop-blur-sm border border-white/5 transform -translate-y-1/2"></div>
      </div>
    )}
  </div>
</div>
