---
const stats = [
  { value: '50K+', label: 'Devices Managed', description: 'Across all customer deployments' },
  { value: '120+', label: 'Countries', description: 'Global device shipping coverage' },
  { value: '99.9%', label: 'Uptime SLA', description: 'Platform reliability guarantee' },
  { value: '<24h', label: 'Deployment Time', description: 'Average time to ship devices' },
];
---

<section class="py-16 px-6 bg-dark-surface border-y border-dark-border">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-white mb-2">
            {stat.value}
          </div>
          <div class="text-lg font-semibold text-primary-400 mb-1">
            {stat.label}
          </div>
          <div class="text-sm text-gray-500">
            {stat.description}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
