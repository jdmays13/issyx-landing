---

<section class="py-16 px-6 border-y border-dark-border bg-dark-surface/30">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h3 class="text-2xl font-bold text-white mb-2">Enterprise-grade security & compliance</h3>
      <p class="text-gray-500">Your data is protected by industry-leading security standards</p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
      {certifications.map((cert) => (
        <div class="text-center p-4 rounded-xl hover:bg-dark-surface transition-colors group">
          <div class="w-16 h-16 mx-auto mb-3 rounded-xl bg-dark-surface border border-dark-border flex items-center justify-center text-primary-400 group-hover:border-primary-500/50 transition-colors">
            <Fragment set:html={cert.icon} />
          </div>
          <div class="font-semibold text-white text-sm">{cert.name}</div>
          <div class="text-xs text-gray-500">{cert.description}</div>
        </div>
      ))}
    </div>
  </div>
</section>
