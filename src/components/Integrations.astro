---
const capabilities = [
  {
    title: 'HR Systems',
    description: 'Sync employees from your HRIS. Auto-provision users on hire, trigger offboarding on termination.',
    examples: 'BambooHR, Workday, Rippling, Gusto, and more',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>',
  },
  {
    title: 'IT Service Desk',
    description: 'Trigger device workflows from your ticketing system. Automate offboarding and reassignments.',
    examples: 'ServiceNow, Zendesk, Jira Service Management, Freshdesk',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" /></svg>',
  },
  {
    title: 'Automation Tools',
    description: 'Build custom workflows with any platform that supports REST APIs and webhooks.',
    examples: 'Zapier, Make, Power Automate, n8n, custom scripts',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" /></svg>',
  },
  {
    title: 'Custom Integrations',
    description: 'Full REST API access to devices, users, and workflows. Build exactly what your organization needs.',
    examples: 'Your internal tools, ERP systems, custom dashboards',
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>',
  },
];

const apiFeatures = [
  'Scoped API keys with granular permissions',
  'Rate-limited for security (1000 req/min)',
  'Webhook support for real-time events',
  'Full documentation with examples',
];
---

<section class="py-24 px-6 bg-dark-surface/50">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="text-primary-400 text-sm font-semibold uppercase tracking-wider">Public API</span>
      <h2 class="text-4xl md:text-5xl font-bold mt-4 mb-6">
        Connect your <span class="gradient-text">existing tools</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Our REST API enables bidirectional sync with your HR, IT, and automation tools.
        Build the integrations your organization needs.
      </p>
    </div>

    <!-- Capabilities grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-16">
      {capabilities.map((cap) => (
        <div class="p-6 rounded-2xl bg-dark-surface border border-dark-border hover:border-primary-500/30 transition-colors">
          <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary-600/20 to-purple-600/20 flex items-center justify-center text-primary-400 mb-4">
            <Fragment set:html={cap.icon} />
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">{cap.title}</h3>
          <p class="text-gray-400 mb-3">{cap.description}</p>
          <p class="text-sm text-gray-500">
            <span class="text-gray-400">Works with:</span> {cap.examples}
          </p>
        </div>
      ))}
    </div>

    <!-- API Features -->
    <div class="bg-dark-bg border border-dark-border rounded-2xl p-8 md:p-12">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <h3 class="text-2xl font-bold text-white mb-4">Developer-friendly API</h3>
          <p class="text-gray-400 mb-6">
            Full REST API with scoped authentication, comprehensive documentation, and example code
            for common integration patterns.
          </p>
          <ul class="space-y-3">
            {apiFeatures.map((feature) => (
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-primary-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-300">{feature}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="bg-dark-surface rounded-xl p-6 font-mono text-sm">
          <div class="text-gray-500 mb-2"># Sync a user from your HRIS</div>
          <div class="text-gray-300">
            <span class="text-primary-400">curl</span> -X POST \<br />
            &nbsp;&nbsp;-H <span class="text-green-400">"X-API-Key: isk_..."</span> \<br />
            &nbsp;&nbsp;-d <span class="text-amber-400">'{"{"}email": "...{"}"}'</span> \<br />
            &nbsp;&nbsp;<span class="text-blue-400">app.issyx.com/api/v1/users</span>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a href="/contact" class="btn-primary inline-flex items-center gap-2">
        Talk to us about integrations
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
