---
import FeatureShowcase from './FeatureShowcase.astro';

// Screenshot recommendations when ready to replace mockups:
// 1. Device Lifecycle: Devices page showing a filtered list with various statuses (deployed, imaging, offboarding)
// 2. Zero-Touch Deployment: MDM enrollment profiles page or a device showing Autopilot enrollment progress
// 3. Mass Imaging: Imaging Jobs page showing active multicast session with progress bars
// 4. Warehouse Operations: Warehouse dashboard with stats cards, incoming shipments, and job queue

const features = [
  {
    tag: 'Device Lifecycle',
    title: 'Complete device lifecycle management',
    subtitle: 'From procurement to retirement, automated.',
    description: 'Track every device from the moment it enters your fleet until it\'s securely wiped and recycled. Our unified platform replaces spreadsheets, manual processes, and fragmented tools with a single source of truth.',
    features: [
      'Real-time device tracking across your entire fleet',
      'Automated status transitions and workflow triggers',
      'Complete audit trail of every device action',
      'Integration with asset management and CMDB systems',
      'Automated compliance reporting and alerts',
    ],
    gradient: 'from-blue-600 to-cyan-600',
    imagePosition: 'right' as const,
  },
  {
    tag: 'Zero-Touch Deployment',
    title: 'Ship devices that configure themselves',
    subtitle: 'Employees unbox and start working. That\'s it.',
    description: 'With Windows Autopilot, Apple DEP, and Android Enterprise, devices ship directly to employees fully enrolled in your MDM. Security policies apply automatically. No IT touch required.',
    features: [
      'Windows Autopilot for seamless PC provisioning',
      'Apple DEP integration for Mac, iPad, and iPhone',
      'Android Enterprise for managed Android devices',
      'Pre-configured apps, settings, and security policies',
      'Automatic MDM enrollment on first boot',
    ],
    gradient: 'from-violet-600 to-purple-600',
    imagePosition: 'left' as const,
  },
  {
    tag: 'Mass Imaging',
    title: 'Image hundreds of devices at once',
    subtitle: 'PXE boot, multicast, zero manual effort.',
    description: 'Our imaging system handles mass deployments with ease. Boot devices over the network, stream images via multicast, and deploy custom profiles with drivers, software, and configurations baked in.',
    features: [
      'PXE boot detection and automatic imaging',
      'Multicast deployment for simultaneous imaging',
      'Custom imaging profiles with software bundles',
      'Driver injection and hardware compatibility',
      'Post-imaging scripts and domain join automation',
    ],
    gradient: 'from-amber-600 to-orange-600',
    imagePosition: 'right' as const,
  },
  {
    tag: 'Warehouse Operations',
    title: 'Full visibility into your device warehouse',
    subtitle: 'Real-time dashboards. Zero surprises.',
    description: 'See exactly what\'s happening in your warehouse at any moment. Track incoming shipments, monitor processing queues, identify at-risk jobs, and ensure nothing falls through the cracks.',
    features: [
      'Real-time warehouse monitoring dashboard',
      'Incoming shipment tracking and receiving',
      'Service order management and prioritization',
      'At-risk job detection and automated alerts',
      'TV mode for warehouse floor displays',
    ],
    gradient: 'from-emerald-600 to-teal-600',
    imagePosition: 'left' as const,
  },
];
