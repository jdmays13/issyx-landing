---
// Client logos - using placeholder company names that represent typical enterprise customers
const clients = [
  { name: 'Acme Corp', logo: 'ACME' },
  { name: 'TechFlow', logo: 'TECHFLOW' },
  { name: 'Velocity', logo: 'VELOCITY' },
  { name: 'Nexus', logo: 'NEXUS' },
  { name: 'Quantum', logo: 'QUANTUM' },
  { name: 'Pinnacle', logo: 'PINNACLE' },
];
---

<section class="py-16 px-6 border-t border-dark-border/50">
  <div class="max-w-7xl mx-auto">
    <p class="text-center text-gray-500 text-sm uppercase tracking-wider mb-8">
      Trusted by IT teams at leading companies
    </p>

    <div class="flex flex-wrap items-center justify-center gap-x-12 gap-y-8">
      {clients.map((client) => (
        <div class="text-gray-500 hover:text-gray-300 transition-colors">
          <span class="text-xl font-brand tracking-wider opacity-60 hover:opacity-100 transition-opacity">
            {client.logo}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
