        <h1 class="text-4xl md:text-5xl font-bold mt-4 mb-6">Terms of Service</h1>
        <p class="text-gray-400">Last updated: {lastUpdated}</p>
      </div>

      <!-- Content -->
      <div class="prose prose-invert prose-lg max-w-none">
