    <section class="py-24 px-6 bg-dark-surface/50">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div class="order-2 lg:order-1 animate-slide-left">
            <div class="rounded-2xl bg-gradient-to-br from-blue-600/20 to-cyan-600/20 p-8">
              <div class="bg-dark-bg/80 backdrop-blur rounded-xl p-6">
                <h3 class="text-white font-semibold mb-4">Assignment Rules</h3>
                <div class="space-y-3">
                  <div class="p-4 bg-dark-surface rounded-lg">
                    <div class="flex items-center justify-between mb-2">
                      <span class="text-white font-medium">Windows Device Deployment</span>
                      <span class="px-2 py-1 rounded text-xs bg-green-500/20 text-green-400">Active</span>
                    </div>
                    <div class="text-gray-500 text-sm mb-2">Assign M365 E3 when Windows device is deployed</div>
                    <div class="flex items-center gap-2 text-xs">
                      <span class="px-2 py-1 rounded bg-blue-500/10 text-blue-400">On Deploy</span>
                      <span class="px-2 py-1 rounded bg-gray-500/10 text-gray-400">Windows</span>
                    </div>
                  </div>
                  <div class="p-4 bg-dark-surface rounded-lg">
                    <div class="flex items-center justify-between mb-2">
                      <span class="text-white font-medium">New User Onboarding</span>
                      <span class="px-2 py-1 rounded text-xs bg-green-500/20 text-green-400">Active</span>
                    </div>
                    <div class="text-gray-500 text-sm mb-2">Assign M365 E3 when user is created</div>
                    <div class="flex items-center gap-2 text-xs">
                      <span class="px-2 py-1 rounded bg-purple-500/10 text-purple-400">On User Create</span>
                      <span class="px-2 py-1 rounded bg-gray-500/10 text-gray-400">All Users</span>
                    </div>
                  </div>
                  <div class="p-4 bg-dark-surface rounded-lg">
                    <div class="flex items-center justify-between mb-2">
                      <span class="text-white font-medium">Engineering Team</span>
                      <span class="px-2 py-1 rounded text-xs bg-green-500/20 text-green-400">Active</span>
                    </div>
                    <div class="text-gray-500 text-sm mb-2">Assign Azure AD P2 to engineering group</div>
