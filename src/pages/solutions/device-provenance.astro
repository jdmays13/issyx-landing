    </section>

    <!-- VeChain ID Assignment -->
    <section class="py-24 px-6 bg-dark-surface/50">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div class="order-2 lg:order-1 animate-slide-left">
            <div class="rounded-2xl bg-gradient-to-br from-emerald-600/20 to-teal-600/20 p-8">
              <div class="bg-dark-bg/80 backdrop-blur rounded-xl p-6">
                <h3 class="text-white font-semibold mb-4">Device Registration</h3>
